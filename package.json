{
    "name": "portfolio",
    "description": "My portfolio built using Sapper, Svelte & TailwindCSS",
    "version": "0.0.1",
    "scripts": {
        "watch:tailwind": "postcss src/tailwind.css -o static/index.css -w",
        "build:tailwind": "NODE_ENV=production postcss src/tailwind.css -o static/index.css",
        "dev": "sapper dev",
        "build": "npm run build:tailwind && sapper build --legacy",
        "export": "npm run build:tailwind && sapper export --legacy",
        "start": "node __sapper__/build",
        "cy:run": "cypress run",
        "cy:open": "cypress open",
        "test": "run-p --race dev cy:run"
    },
    "dependencies": {
        "@fullhuman/postcss-purgecss": "^2.2.0",
        "compression": "^1.7.4",
        "polka": "next",
        "sirv": "^0.4.6",
        "svelte-waypoint": "^0.1.4",
        "workbox-cacheable-response": "^5.1.3",
        "workbox-core": "^5.1.3",
        "workbox-expiration": "^5.1.3",
        "workbox-precaching": "^5.1.3",
        "workbox-routing": "^5.1.3",
        "workbox-strategies": "^5.1.3",
        "workbox-window": "^5.1.3"
    },
    "devDependencies": {
        "@babel/core": "^7.10.1",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.10.1",
        "@babel/preset-env": "^7.10.1",
        "@babel/runtime": "^7.10.1",
        "@rollup/plugin-commonjs": "^12.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@rollup/plugin-replace": "^2.3.2",
        "autoprefixer": "^9.8.0",
        "eslint": "^7.1.0",
        "eslint-plugin-svelte3": "^2.7.3",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.7",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^7.1.1",
        "postcss-nested": "^4.2.1",
        "prettier": "^2.0.5",
        "prettier-eslint-cli": "^5.0.0",
        "prettier-plugin-svelte": "^1.1.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.11.2",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-svelte": "^5.2.2",
        "rollup-plugin-terser": "^6.1.0",
        "sapper": "^0.27.13",
        "sharp": "^0.25.3",
        "svelte": "^3.23.0",
        "svelte-preprocess": "^3.7.4",
        "tailwindcss": "^1.9.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js}": "eslint --fix",
        "*.{js,svelte,json,html}": "prettier --write"
    }
}
