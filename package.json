{
    "name": "portfolio",
    "description": "My portfolio built using Sapper, Svelte & TailwindCSS",
    "version": "0.0.1",
    "scripts": {
        "watch:tailwind": "postcss src/tailwind.css -o static/index.css -w",
        "build:tailwind": "NODE_ENV=production postcss src/tailwind.css -o static/index.css",
        "dev": "sapper dev",
        "build": "npm run build:tailwind && sapper build --legacy",
        "export": "npm run build:tailwind && sapper export --legacy",
        "start": "node __sapper__/build",
        "cy:run": "cypress run",
        "cy:open": "cypress open",
        "test": "run-p --race dev cy:run"
    },
    "dependencies": {
        "@fullhuman/postcss-purgecss": "^2.1.0",
        "compression": "^1.7.4",
        "polka": "next",
        "sirv": "^0.4.2",
        "svelte-waypoint": "^0.1.4"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "@babel/runtime": "^7.9.2",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-replace": "^2.3.1",
        "eslint": "^6.8.0",
        "eslint-plugin-svelte3": "^2.7.3",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.9",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^7.1.0",
        "postcss-nested": "^4.2.1",
        "prettier": "^2.0.2",
        "prettier-eslint-cli": "^5.0.0",
        "prettier-plugin-svelte": "^0.7.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.1.0",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-svelte": "^5.1.1",
        "rollup-plugin-terser": "^5.3.0",
        "sapper": "^0.27.11",
        "sharp": "^0.25.2",
        "svelte": "^3.20.1",
        "svelte-preprocess": "^3.5.0",
        "tailwindcss": "^1.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js}": "eslint --fix",
        "*.{js,svelte,json,html}": "prettier --write"
    }
}
